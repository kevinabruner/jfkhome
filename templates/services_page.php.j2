{# Define scope #}
{%- set scope = 'external' if env == 'prod' else 'internal' -%}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Service Directory - {{ env | upper }}</title>
    <style>
        body { font-family: sans-serif; line-height: 1.6; padding: 20px; background: #f4f4f4; }
        .container { max-width: 800px; margin: auto; background: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); }
        h1 { color: #333; border-bottom: 2px solid #eee; padding-bottom: 10px; }
        .service-card { border: 1px solid #ddd; padding: 15px; margin-bottom: 10px; border-radius: 4px; display: flex; justify-content: space-between; align-items: center; }
        .service-name { font-weight: bold; font-size: 1.2em; color: #0056b3; }
        .btn { text-decoration: none; background: #0056b3; color: white; padding: 8px 15px; border-radius: 4px; font-size: 0.9em; }
        .btn:hover { background: #004494; }
        .tag { font-size: 0.7em; background: #e0e0e0; padding: 2px 6px; border-radius: 10px; text-transform: uppercase; }
        .tag_internal{ background: #b6ffa2ff}
        .tag_external{ background: #ff8686ff}
    </style>
</head>
<body>
    <div class="container">
        <h1>TheJFK.ca Service Directory</h1>
        <p>Environment: <strong>{{ env }}</strong></p>
        
        {% for svc in services_list | sort(attribute='name') %}
            {# Only show services that are in this environment's scope and which aren't intentionally hidden#}
            {% if scope in svc.scope and svc.hide_on_page | default(false) == false %}
                <div class="service-card">
                    <div>
                        <span class="service-name">{{ svc.name | replace('_', ' ') | title }}</span>
                        <br>
                        {%- for target_scope in svc.scope %}
                        <span class="tag tag_{{ target_scope }}">{{ target_scope }}</span>
                        {% endfor %}
                    </div>
                    <div class="desc">
                        {{ svc.description | default(" ") }}
                        
                    </div>
                    {# Assuming your URL pattern follows the service name #}
                    <a href="https://{{ svc.fqdn_list | first }}" class="btn" target="_blank">View site</a>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</body>
</html>