// PHP logic to fetch HAProxy stats server-side
// The URL is passed in via Ansible variables
$stats_url = "{{ proxy_stats_url }}";
$stats_json = @file_get_contents($stats_url);
$stats = $stats_json ? json_decode($stats_json, true) : [];

function get_backend_status($name, $all_stats) {
    $target = $name . "_backend";
    foreach ($all_stats as $s) {
        if ($s['pxname'] === $target && $s['svname'] === 'BACKEND') {
            return strtolower($s['status']); // Returns 'up', 'down', 'maint'
        }
    }
    return 'unknown';
}
